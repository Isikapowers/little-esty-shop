<h1><%= @merchant.name %> Items:</h1>
<%= link_to "Create item", new_merchant_item_path(@merchant) %>

<ul>
  <% @merchant_items.each do |item| %>
  <div id="item-<%= item.id %>">
  <li><%= link_to item.name, merchant_item_path(@merchant, item) %>
  <%= button_to item.status, merchant_item_path(@merchant, item), method: :patch, params: {item: item, status: item.status} %></li>
  </div>
  <% end %>
</ul>
