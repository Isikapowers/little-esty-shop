<%= render "admin/admin_header" %>

<div class="jumbotron">
  <h1 class="display-4">Admin Dashboard</h1><br>
<ul>
  <li><%= link_to 'List of Merchants', admin_merchants_path %></li><br>

  <li><%= link_to 'List of Invoices', admin_invoices_path %></li>
</ul>
</div><br>

<div id="top_five">
  <h3>Top Customers:</h3>
  <ol>
     <% @top_five.each do |customer| %>
     <li><%= customer.first_name + ' ' + customer.last_name %> -- <%= customer.number_of_transactions %> purchases</li>
   <% end %>
   </ol>
</div>

<div id="invoices">
  <h3>Incomplete Invoices</h3>
  <ol>
    <% @incomplete.each do |invoice| %>
    <li><%= link_to "Invoice##{invoice.id}", admin_invoice_path(invoice) %> -- Created at: <%= invoice.created_at.strftime("%A, %B %d, %Y")%></li>
    <% end %>
  </ol>
</div>
